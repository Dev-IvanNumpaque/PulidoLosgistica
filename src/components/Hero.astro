---
import { Image } from "astro:assets";
import LogoPL from "../../public/LogoPL.png";
---
<section id="inicio" class="hero-section">
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#inicio">
                <Image 
                    src={LogoPL} 
                    alt="Pulido Logística Logo"
                    class="navbar-logo"
                    loading="eager"
                    decoding="sync"
                />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#inicio">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#servicios">Servicios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#nosotros">Nosotros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contacto">Contacto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container hero-content">
        <div class="row">
            <div class="col-lg-6 text-white">
                <h1 class="display-4 fw-bold mb-4">Servicio de Entrega Rápida y Confiable en Bogotá</h1>
                <p class="lead mb-5">Entregas a tiempo, donde quieras, cuando lo necesites.</p>
                <a href="https://api.whatsapp.com/send?phone=573223706584" class="btn btn-primary me-3">Solicita tu entrega</a>
                <a href="https://api.whatsapp.com/send?phone=573223706584" class="btn-wsp" target="_blank" aria-label="Contactar por WhatsApp">
                    <i class="fab fa-whatsapp" aria-hidden="true" title="Ícono de WhatsApp"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
:root {
    --color-white: #ffffff;
    --color-whatsapp: #0df053;
    --color-primary: #0d6efd;
    --transition-default: all 0.3s ease;
    --shadow-default: 0 4px 12px rgba(0, 0, 0, 0.1);
}

.hero-section {
    background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/hero.jpg') no-repeat center center;
    background-size: cover;
    min-height: 100vh;
    display: flex;
    align-items: center;
}

.navbar {
    padding: 1rem 0;
    transition: var(--transition-default);
}

.navbar.scrolled {
    background-color: rgba(0, 0, 0, 0.85);
}

.navbar-nav .nav-link {
    color: var(--color-white) !important;
    font-weight: 500;
    padding: 0.8rem 1.2rem;
    margin: 0 0.3rem;
    border-radius: 6px;
    transition: var(--transition-default);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.navbar-nav .nav-link:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
    box-shadow: var(--shadow-default);
    color: var(--color-primary) !important;
}

.navbar-logo {
    height: 45px;
    width: auto;
    z-index: 4;
}

.hero-content {
    margin-top: 80px;
}

.hero-content h1 {
    color: var(--color-white);
}

.btn-wsp {
    position: fixed;
    width: 55px;
    height: 55px;
    line-height: 55px;
    bottom: 30px;
    right: 30px;
    background: var(--color-whatsapp);
    color: var(--color-white);
    border-radius: 50px;
    text-align: center;
    font-size: 30px;
    box-shadow: 0px 1px 10px rgba(0, 0, 0, 0.3);
    z-index: 100;
    transition: var(--transition-default);
}

.btn-wsp:hover {
    transform: scale(1.05);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const navbar = document.querySelector('.navbar');
    const navbarHeight = navbar.offsetHeight;
    const scrollThreshold = navbarHeight;
    let ticking = false;

    function updateNavbar() {
        const scrolled = window.scrollY > scrollThreshold;
        if (scrolled && !navbar.classList.contains('scrolled')) {
            navbar.classList.add('scrolled');
        } else if (!scrolled) {
            navbar.classList.remove('scrolled');
        }
        ticking = false;
    }

    window.addEventListener('scroll', () => {
        if (!ticking) {
            requestAnimationFrame(updateNavbar);
            ticking = true;
        }
    });

    // Llamar a updateNavbar inicialmente para manejar la posición inicial
    updateNavbar();
});
</script>